@{
    ViewData["Title"] = "Review History";
    Layout = "_Layout";
}
<h4>Review History</h4>
<p>The Head Compliance/COO reviews the observation and forwards it to Internal Audit with clear recommendations.</p>
<form>
    <div class="form-group">
        <label for="coo-comments">Comments</label>
        <textarea class="form-control" id="coo-comments" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Forward to Internal Audit</button>
</form>
