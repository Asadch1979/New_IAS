@{
    ViewData["Title"] = "Review Response";
    Layout = "_Layout";
}
<h4>Review Response</h4>
<p>The Divisional Head reviews the department's response and forwards it to the Group Head or refers back.</p>
<form>
    <div class="form-group">
        <label for="comments">Comments</label>
        <textarea class="form-control" id="comments" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Forward</button>
    <button type="button" class="btn btn-secondary">Refer Back</button>
</form>
