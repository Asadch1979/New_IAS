@model AIS.Models.CAObservation
@{
    ViewData["Title"] = "Audit Observation Details";
    Layout = "_Layout";
}

<h2>Audit Observation Details</h2>
<div>
    <b>Observation ID:</b> @Model.ObservationID<br />
    <b>Observation Text:</b> @Model.ObservationText<br />
    <b>Status:</b> @Model.CurrentStatus<br />
    <b>Date Entered:</b> @Model.DateEntered.ToString("yyyy-MM-dd")<br />
    <b>Division ID:</b> @Model.AssignedDivisionID<br />
    <b>Department ID:</b> @Model.AssignedDepartmentID<br />
    <b>Supporting Documents:</b>
    @if (!string.IsNullOrEmpty(Model.SupportingDocuments))
    {
        <a href="@Url.Content(Model.SupportingDocuments)" target="_blank">Download</a>
    }
</div>
