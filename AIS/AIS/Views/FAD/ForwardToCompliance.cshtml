@{
    ViewData["Title"] = "Forward To Compliance";
    Layout = "_Layout";
}
<h4>Forward To Compliance</h4>
<p>The Group Head reviews the case and decides whether to forward it to Compliance or reject it.</p>
<form>
    <div class="form-group">
        <label for="gh-comments">Comments</label>
        <textarea class="form-control" id="gh-comments" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Forward</button>
    <button type="button" class="btn btn-secondary">Reject</button>
</form>
