@{
    ViewData["Title"] = "Assign Department";
    Layout = "_Layout";
}
<h4>Assign Department</h4>
<p>The Group or Divisional Head assigns the observation to a department with instructions.</p>
<form>
    <div class="form-group">
        <label for="department">Department</label>
        <select class="form-control" id="department">
            <option>-- Select Department --</option>
        </select>
    </div>
    <div class="form-group">
        <label for="instruction">Instructions</label>
        <textarea class="form-control" id="instruction" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Assign</button>
</form>
