@model IEnumerable<AIS.Models.ObservationReferenceLogModel>
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Update Log</h5>
            <button type="button" class="close" data-bs-dismiss="modal"><span>&times;</span></button>
        </div>
        <div class="modal-body">
            <table class="table table-bordered table-striped" id="logTable">
                <thead class="table-success">
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Field Changed</th>
                        <th>Old Value</th>
                        <th>New Value</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null)
                {
                    foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.Date.ToString("yyyy-MM-dd")</td>
                            <td>@log.User</td>
                            <td>@log.FieldChanged</td>
                            <td>@log.OldValue</td>
                            <td>@log.NewValue</td>
                            <td>@log.Action</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        initializeDataTable('logTable');
    });
</script>
